style "MenuItem"

{

  xthickness = 3
  ythickness = 2

    engine "pixmap" 
    {
	image 
	{
            function            = BOX
            recolorable         = TRUE
            file                = "Menu/menuitem.02.png"
            stretch             = TRUE
        }

    	image 
        {
        	function        = HLINE
 		recolorable     = TRUE
 		file            = "Menu/menu-separator.01.png"
		border          = { 3, 3, 3, 3 }
		stretch         = TRUE
      	}

	image
	{
		function = ARROW
		recolorable = TRUE
		state = NORMAL
		overlay_file = "Arrows/arrow-menu-normal.png"
		overlay_stretch	= FALSE
		arrow_direction	= RIGHT
	    }
		
	image
	    {
		function = ARROW
		recolorable = TRUE
		state = PRELIGHT
		overlay_file = "Arrows/arrow-menu-prelight.png"
		overlay_stretch	= FALSE
		arrow_direction	= RIGHT
	}

	image
	    {
		function = ARROW
		recolorable = TRUE
		state = INSENSITIVE
		overlay_file = "Arrows/arrow-menu-insensitive.png"
		overlay_stretch	= FALSE
		arrow_direction	= RIGHT
	}

    }
}

